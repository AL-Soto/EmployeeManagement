model IEnumerable<EmployeeManagement.Models.Employee>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link rel="stylesheet" href="~/Styles/styles.css" />

    <h2>Lista De Empleados</h2>

    <p>
        @Html.ActionLink("Agregar Nuevo Empleado", "AddEmployee")
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="employee-table-body">
            @foreach (var item in Model)
            {
                <tr data-id="@item.Id">
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Office</td>
                    <td>@item.Salary</td>
                    <td>
                        <a href="#" class="edit-link" data-id="@item.Id">Editar</a> |
                        <a href="#" class="delete-link" data-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Para incluir jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
    $(document).ready(function() {
        // Crear nuevo empleado
        $('#create-new').on('click', function(e) {
            e.preventDefault();
            window.location.href = '@Url.Action("AddEmployee", "Employee")';
        });

        // Editar empleado
        $('.edit-link').on('click', function(e) {
            e.preventDefault();
            var id = $(this).data('id');
            window.location.href = '@Url.Action("UpdateEmployee", "Employee")' + '/' + id;
        });

        // Eliminar empleado
       $('.delete-link').on('click', function(e) {
            e.preventDefault();
            var id = $(this).data('id');
            if (confirm("Estás seguro que deseas eliminar este empleado?")) {
                $.ajax({
                    url: '@Url.Action("DeleteEmployee", "Employee")',
                    type: 'POST',
                    data: JSON.stringify({ id: id }),
                    contentType: 'application/json; charset=utf-8',
                    success: function(response) {
                        if (response.success) {
                            $('tr[data-id="' + id + '"]').remove();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('An error occurred: ' + xhr.responseText);
                    }
                });
            }
        });
    });
    </script>

